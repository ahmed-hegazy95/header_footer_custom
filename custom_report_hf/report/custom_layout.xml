<odoo>

     <template id="web.external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
                <t t-raw="0"/>
            </t>
            <t t-else="else" t-call="web.external_layout_standard">
                <t t-raw="0"/>
            </t>

        </template>



        <template id="external_layout_custom_img_style" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@t-attf-class='header o_company_#{company.id}_layout']" position="replace">

                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <div class="row">
                        <div class="col-xs-3">
                        </div>
                        <div class="col-xs-9 text-right" style="margin-top:20px;">
                            <img t-if="company.header_logo"
                                 t-att-src="image_data_uri(company.header_logo)"
                                 style="max-height: 150px;" alt="Logo"/>
                        </div>
                    </div>
                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"/>
                        </div>
                    </div>
                </div>

            </xpath>


            <xpath expr="//div[@t-attf-class='footer o_standard_footer o_company_#{company.id}_layout']"
                   position="replace">

                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <div style="margin-top: 5px;">
                            <img t-if="company.footer_logo"
                                 t-att-src="image_data_uri(company.footer_logo)"
                                 style="max-height: 150px;" alt="Logo"/>
                        </div>
                        <div name="financial_infos">
                            <span t-field="company.report_footer"/>
                        </div>
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page:
                            <span class="page"/>
                            /
                            <span class="topage"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </template>


</odoo>
